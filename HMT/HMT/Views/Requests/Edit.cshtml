@model HMT.Models.HMTModel.RequestPostModel

@{
    ViewData["Title"] = "Edit Request";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int requestId = ViewBag.requsetId;
    string codeRequest = ViewBag.codeRequest;
}



<main class="p-6">
  
    <!-- Main change -->
    <section class="mb-6 rounded-md shadow bg-white w-full p-5 dark:bg-dark">
        <div class="flex items-center justify-between">
            <h3 class="text-lg font-medium dark:text-white mb-3">Edit Request(<span class="font-semibold">#@codeRequest</span>)</h3>
            <button type="button"
                    class="addBtn py-2 px-5 rounded border border-primary font-medium hover:bg-gray-100 dark:bg-gray-700 dark:hover:bg-gray-600 dark:text-white"
                    id="requestStationeryBtn">
                <span><i class="fa-solid fa-plus"></i></span>
                Add stationery
            </button>
        </div>
        <form asp-action="EditRequest" method="post" class="mt-5" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input id="requestId" name="requestId" type="number" value="@requestId" class="hidden" />
            <div id="manager"></div>
            <div id="requestStationery"></div>
            <div class="flex items-center justify-center m-auto">
                <button class="py-3 px-16 font-medium bg-primary hover:bg-sky-600 rounded-md text-white">
                    Request
                    <span class="ml-2"><i class="fa-solid fa-up-right-from-square"></i></span>
                </button>
            </div>
        </form>
    </section>
    <!-- Main change end -->

</main>
