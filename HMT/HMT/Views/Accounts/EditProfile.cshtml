@model HMT.Models.User

@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main class="p-6">
<section class="w-full rounded-md bg-white shadow p-5 dark:bg-dark mb-6">
    <h3 class="font-medium text-lg pb-5 dark:text-white">Edit Profile</h3>
    <form asp-action="EditProfile" method="post" class="grid grid-cols-5 gap-5" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div class="flex justify-center">
            <div class="relative h-fit">
                <img id="avatarEditImg" class="h-36 w-36 rounded-full object-cover"
                     src="~/img/@(Model.Image == "" ? "Avatar-Default.jpg" : Model.Image)" alt="avartar">
                <label for="avatarEdit"
                       class="w-10 h-10 rounded-full flex items-center justify-center cursor-pointer bg-gray-100 shadow-md hover:bg-gray-200 absolute bottom-0 right-0 dark:text-gray-300 dark:bg-gray-500 dark:hover:bg-gray-600">
                    <i class="fa-solid fa-pen"></i>
                </label>
            </div>
            <input id="avatarEdit" type="file" class="hidden" asp-for="@Model.FrontImage" value="@Model.Image">
        </div>
        <div class="col-span-4">
            <div class="grid grid-cols-2 gap-5">
                <div class="mb-6">
                    <label asp-for="Email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Email</label>
                    <input type="email" id="email" asp-for="Email" value="@Model.Email"
                           class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg outline-none focus:border-primary block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                           placeholder="Enter email" disabled>
                    <span asp-validation-for="Email" class="text-red-700 text-sm"></span>
                </div>
                <div class="mb-6">
                    <label asp-for="PhoneNumber" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Phone</label>
                    <input type="text" id="phone" asp-for="PhoneNumber" value="@Model.PhoneNumber"
                           class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg outline-none focus:border-primary block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                           placeholder="vd: 098587656" required>
                    <span asp-validation-for="PhoneNumber" class="text-red-700 text-sm"></span>
                </div>
                <div class="mb-6">
                    <label asp-for="FullName" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                        Full Name
                    </label>
                    <input type="text" id="fullName" asp-for="FullName" value="@Model.FullName"
                           class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg outline-none focus:border-primary block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                           placeholder="Enter full name" required>
                    <span asp-validation-for="FullName" class="text-red-700 text-sm"></span>
                </div>
                <div class="mb-6">
                    <label asp-for="Address"
                           class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Address</label>
                    <input type="text" id="address" asp-for="Address" value="@Model.Address"
                           class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg outline-none focus:border-primary block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                           placeholder="Enter address" required>
                    <span asp-validation-for="Address" class="text-red-700 text-sm"></span>
                </div>
                <div>
                    <a asp-action="Index" class="text-white py-2 px-6 rounded-md bg-primary bg-red-500 text-sm hover:bg-red-600">Cancel</a>
                    <button type="submit" class="text-white py-2 px-12 rounded-md bg-primary text-sm hover:bg-sky-600">Save</button>
                </div>
            </div>
        </div>
    </form>
</section>
</main>