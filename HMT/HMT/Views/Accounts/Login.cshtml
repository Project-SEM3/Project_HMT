@model HMT.Models.HMTModel.LoginView

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}


<main class="w-screen h-screen flex items-center justify-center bg-[url('../img/bg-login.jpg')] bg-center bg-cover">
    <section class="w-[480px] bg-white rounded-lg p-5 shadow">
        <div class="flex justify-center">
            <img class="h-[100px]" src="~/img/Logo-Stage.png" alt="">
        </div>
        <h1 class="font-medium text-2xl mb-2">Sign In</h1>
        <p class="text-sm pb-6 text-gray-500">Enter your email and password to login</p>
        <form method="POST" asp-action="Login" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-6">
                <label for="email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Email</label>
                <input type="email" id="email" asp-for="Email" autocomplete="on"
                       class="bg-white border border-gray-300 text-gray-900 text-sm rounded-md outline-none focus:border-primary block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                       placeholder="Enter your email" required>
                <span asp-validation-for="Email" class="text-red-700 text-sm"></span>
            </div>
            <div class="mb-6">
                <label for="password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Password</label>
                <input type="password" id="password" asp-for="Password"
                       class="bg-white border border-gray-300 text-gray-900 text-sm rounded-md outline-none focus:border-primary block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                       required placeholder="Enter your password">
                <span asp-validation-for="Password" class="text-red-700 text-sm"></span>
            </div>
            <div class="flex items-start mb-6">
                <div class="flex items-center h-5">
                    <input id="remember" type="checkbox" value="" checked
                           class="w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-blue-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800"
                           required>
                </div>
                <label for="remember" class="ml-2 text-sm font-medium text-gray-500 dark:text-gray-300">Remember me</label>
            </div>
            <div>
                <button type="submit"
                        class="text-white uppercase py-2 px-6 rounded-md bg-primary w-full shadow-md drop-shadow-lg shadow-sky-500">
                    Sign In
                </button>
            </div>
            <div class="relative my-7 h-5 text-center before:absolute before:inset-0 before:m-auto before:h-[1px] before:w-full before:bg-[#ebedf2] dark:before:bg-[#253b5c]">
                <div class="relative z-[1] inline-block bg-white px-2 font-bold text-white-dark dark:bg-[#0e1726]">
                    <span class="text-gray-400">OR</span>
                </div>
            </div>
            <div class="flex gap-3 justify-center">
                <div class="flex items-center py-2 px-6 bg-gray-200 rounded-lg cursor-pointer hover:bg-gray-100 ">
                    <span class="text-xl mr-2 text-red-500"><i class="fa-brands fa-google"></i></span>
                    <p class="text-sm">Google</p>
                </div>
                <div class="flex items-center py-2 px-6 bg-gray-200 rounded-lg cursor-pointer hover:bg-gray-100 ">
                    <span class="text-xl mr-2"><i class="fa-brands fa-github"></i></span>
                    <p class="text-sm">Github</p>
                </div>
                <div class="flex items-center py-2 px-6 bg-gray-200 rounded-lg cursor-pointer hover:bg-gray-100 ">
                    <span class="text-xl mr-2 text-sky-500"><i class="fa-brands fa-twitter"></i></span>
                    <p class="text-sm">Twitter</p>
                </div>
            </div>
        </form>

    </section>
</main>


